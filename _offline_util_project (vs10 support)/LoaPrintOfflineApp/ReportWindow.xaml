<Window x:Class="LoaPrintOfflineApp.ReportWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:winForms="clr-namespace:Microsoft.Reporting.WinForms;assembly=Microsoft.ReportViewer.WinForms" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
		WindowStartupLocation="CenterOwner"
        mc:Ignorable="d" 
        Title="Окно отображения отчёта" 
        d:DesignHeight="300" d:DesignWidth="600" Background="PaleGoldenrod">

	<ScrollViewer VerticalScrollBarVisibility="Auto" >
